<div class="container">
<%= simple_form_for([@costume, @booking]) do |f| %>
    <div class="form-group">
    <%= f.input :start_date,
            as: :string,
            input_html: { data: { controller: "datepicker" } } %>
</div>
    
 <div class="form-group">
    <%= f.input :end_date,
            as: :string,
            input_html: { data: { controller: "datepicker" } } %>
</div>
    
<div class="actions">
    <%= f.submit "Submit", class: "btn btn-costume" %>
    </div>
    <% end %>
</div>