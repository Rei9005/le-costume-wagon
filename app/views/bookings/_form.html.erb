<div class="container">
<div data-controller="booking-price" data-booking-price-price-value="<%= @costume.price %>" class="mt-5 border p-3 rounded">
<%= simple_form_for([@costume, @booking]) do |f| %>
    <div class="form-group">
    <%= f.input :start_date,
            as: :string,
            input_html: { data: { controller: "datepicker" , booking_price_target: 'start_date', action: 'change->booking-price#update'} } %>
</div>

 <div class="form-group">
    <%= f.input :end_date,
            as: :string,
            input_html: { data: { controller: "datepicker",  booking_price_target: 'end_date', action: 'change->booking-price#update' } } %>
</div>
    
<div class="actions">

    <%= f.submit "Submit", class: "btn btn-costume" %>
    </div>
       <p class='mt-3 d-flex align-items-center justify-content-between'>
      <span data-booking-price-target='info'></span>
      <span class='fw-bold' data-booking-price-target='price'></span>
    </p>
    <% end %>
 </div>
</div>
